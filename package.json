{
  "name": "css-to-ts",
  "version": "0.1.0",
  "description": "css-to-ts takes css file and outputs TypeScript file with an exported string containing content of your css file.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p .",
    "tslint": "tslint --project . --config ./tslint.json",
    "watch": "tsc -w",
    "test": "tsc -p . --noEmit && npm run tslint",
    "release": "npm run build && npm run uglifyjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SimplrJS/css-to-ts.git"
  },
  "keywords": [
    "SimplrJS",
    "css",
    "Cascading",
    "Style",
    "Sheets",
    "ts",
    "Typescript",
    "css-to-ts"
  ],
  "author": "Deividas Bakanas <deividas@quatrodev.com> (https://github.com/DeividasBakanas)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SimplrJS/css-to-ts/issues"
  },
  "homepage": "https://github.com/SimplrJS/css-to-ts#readme",
  "devDependencies": {
    "@types/chokidar": "^1.6.0",
    "@types/glob": "^5.0.30",
    "@types/mkdirp": "^0.3.29",
    "@types/yargs": "^6.6.0",
    "tslint": "^5.0.0",
    "typescript": "^2.2.2",
    "uglify-js": "^2.8.21"
  },
  "dependencies": {
    "chokidar": "^1.6.1",
    "glob": "^7.1.1",
    "mkdirp": "^0.5.1",
    "yargs": "^7.0.2"
  },
  "engine": "node >= 5.0.0"
}
